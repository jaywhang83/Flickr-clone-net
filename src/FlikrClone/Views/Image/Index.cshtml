@{
    ViewData["Title"] = "Images";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<FlikrClone.Models.Image>
@using System.Security.Claims

<h2>Here are all of your images, @User.GetUserName()</h2>
<hr />

@if (Model.Any())
{
    
    @foreach (var listImage in Model)
    {
        <img src="@Html.DisplayFor(modelImage => listImage.Url)" alt=@Html.DisplayFor(modelImage => listImage.Description)>
        <br />
        <br />
        <p>@Html.DisplayFor(modelImage => listImage.Description) @Html.ActionLink("Details", "Details", new { id = listImage.ImageId })</p>
        <hr />
        
     }

}
else
{
    <p>No images have been added yet!</p>
}

@Html.ActionLink("Add Image", "Create") |
@Html.ActionLink("Back to homepage", "Index", "Account")
